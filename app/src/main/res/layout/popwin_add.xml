        <!--android:layout_height="15dp"-->
        <!--android:id="@+id/iv_close"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:src="@drawable/cross_with_background" />-->

</RelativeLayout>